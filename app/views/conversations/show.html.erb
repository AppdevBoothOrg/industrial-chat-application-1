<%= turbo_stream_from @conversation %>

<h1>
  Conversation <%= @conversation.id %>
</h1>

<p class="mt-4">
  <strong>Company representative:</strong>
  <%= User.find(@conversation.company_representative_id).username.capitalize() %>
</p>

<% if @conversation.closed? %>
  <p>
    <strong> Company Representative Rating:</strong>
    <% if @conversation.company_representative.gradee_ratings.where( {gradee_id: @conversation.company_representative_id} ).first.grade != nil %>
      <div class="row mb-6">
        <div class="col-md-6 mb-4">
          <%= render "/shared/rate_bar", number: @conversation.company_representative.gradee_ratings.where( {gradee_id: @conversation.company_representative_id} ).first.grade %>
        </div>
      </div>
    <% else %>
      <%= render "/shared/rating_input_form", rating: Rating.new(grader_id: @conversation.customer_id, gradee_id: @conversation.company_representative_id) %>
    <% end %>
  </p>
<% end %>


<p>
  <strong>Customer:</strong>
  <%= User.find(@conversation.customer_id).username.capitalize() %>
</p>

<% if @conversation.closed? %>
  <p>
    <strong>Customer Rating:</strong>
    <% if @conversation.customer.gradee_ratings.where( {gradee_id: @conversation.customer_id} ).first.grade != nil %>
      <div class="row mb-4">
        <div class="col-md-6  mb-4">
          <%= render "/shared/rate_bar", number: @conversation.customer.gradee_ratings.where( {gradee_id: @conversation.customer_id} ).first.grade %>
        </div>
      </div>
    <% end %>
  </p>
<% end %>



<p>
  <strong>Status:</strong>
  <%= @conversation.status.capitalize %>
  
  <% if !(current_user.customer?) %>
    <tr>
      <div class="row mb-3">
        <div class="col-md-3">
          <div class="card" >
            <div class="card-body" >
              <%= render '/conversations/status_change_form', conversation: @conversation %>
            </div>
          </div>
        </div>
      </div>
    </tr>
  <% end %>

</p>

  <tr>
    <div id="comments_catch">
      <% @conversation.comments.order({ :created_at => :asc }).each do |a_comment| %>
          <%= render "shared/comment", comment: a_comment %>
      <% end %>
    </div>
  </tr>

<%= turbo_frame_tag "new_comment", src: new_comment_path(:a_conversation_id => params[:id]), target: "_top" %>

<%= link_to 'Edit', edit_conversation_path(@conversation) %> |
<%= link_to 'Back', conversations_path %>





