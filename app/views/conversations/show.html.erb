<h1> Conversation <%= @conversation.id %> </h1>

<p>
  <strong>Company representative:</strong>
  <%= User.all.find(@conversation.company_representative_id).username.capitalize() %>
</p>

<p>
  <strong>Customer:</strong>
  <%= User.all.find(@conversation.customer_id).username.capitalize() %>
</p>

<p>
  <strong>Status:</strong>
  <%= @conversation.status.capitalize %>
</p>

  <tr>
    <% @conversation.comments.each do |a_comment| %>
        <%= render "shared/comment", comment: a_comment %>
    <% end %>
  </tr>

<%= link_to 'Edit', edit_conversation_path(@conversation) %> |
<%= link_to 'Back', conversations_path %>





